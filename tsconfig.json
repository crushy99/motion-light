{
  "compilerOptions": {
    "jsx": "react",
    "module": "NodeNext",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "resolveJsonModule": true,
    "lib": ["DOM","ES6","DOM.Iterable","ScriptHost", "ES2016", "ES2017"],
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
